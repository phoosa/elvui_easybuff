<Ui xmlns="http://www.blizzard.com/wow/ui/">
  <MessageFrame name="ELVUI_EASYBUFF_ANNOUNCE_FRAME"
                frameStrata="MEDIUM"
                insertMode="TOP"
                parent="UIParent"
                enableMouse="false"
                enableKeyboard="false"
                toplevel="true"
                movable="false"
                fade="true"
                fadeDuration="1.0"
                displayDuration="3.0"
    >
    <Size>
      <AbsDimension x="400" y="100" />
    </Size>
    <Anchors>
      <Anchor point="TOPLEFT">
        <Offset>
          <AbsDimension x="4" y="-4" />
        </Offset>
      </Anchor>
    </Anchors>
    <FontString inherits="NumberFontNormalHuge" justifyH="LEFT" justifyV="MIDDLE"/>
  </MessageFrame>
  <Button name="ELVUI_EASYBUFF_PERFORM_BUTTON"
          inherits="SecureActionButtonTemplate"
          parent="UIParent"
          toplevel="true" 
          hidden="true"  
          frameStrata="LOW"
          movable="false"
  >
    <Size>
      <AbsDimension x="1" y="1"/>
    </Size> 
    <Anchors>
      <Anchor point="TOPLEFT">
        <Offset>
          <AbsDimension x="1" y="1" />
        </Offset>
      </Anchor>
    </Anchors>
  </Button>
</Ui>